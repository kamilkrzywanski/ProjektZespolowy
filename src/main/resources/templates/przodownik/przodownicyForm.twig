{% extends '../formTemplate.twig' %}

{% block title %}
     Formularz Przodownika
{% endblock %}

{% block header %}
    <h2>Formularz Przodownika</h2>
{% endblock %}

{% block form %}
    {% if update == 1 %}
        <form id="signupFormUpdate"  name = "signupFormUpdate" action="/przodownicy/update/{{ przodownik.getIdPrzodownik }}" method="POST">
    {% else %}
        <form id="signupFormRegister" name = "signupFormRegister" action="/przodownicy/dodaj" method="POST">
    {% endif %}
        <fieldset>
            <legend> Dane personalne </legend>
            <div class="form-group">
                <label for="imie">Imię</label>
                <input type="text" class="form-control" id="imie" name="imie" value="{{przodownik.getImie}}">
                <div class="error" id="nameErr"></div>
            </div>
            <div class="form-group">
                <label for="nazwisko">Nazwisko</label>
                <input type="text" class="form-control" id="nazwisko" name="nazwisko" value="{{przodownik.getNazwisko}}">
                <div class="error" id="surnameErr"></div>
            </div>
            <div class="form-group">
                <label for="telefon">Telefon</label>
                <input type="text" class="form-control" id="telefon" name="telefon" value="{{przodownik.getTelefon}}">
                <div class="error" id="phoneErr"></div>
            </div>
        </fieldset>
        <fieldset>
            <legend> Dane konta </legend>
            <div class="form-group">
                <label for="login">Login</label>
                <input type="text" class="form-control" id="login" name="login" value="{{przodownik.uzytkownik.getLogin}}">
                <div class="error" id="loginErr"></div>
            </div>
            <div class="form-group">
            <label for="haslo">Hasło</label>
           		 <div class="input-container">
                   <input type="password" class="form-control input-field" id="haslo" name="haslo" value="">
                   <i class="fas fa-eye icon" id="eye"></i>
               </div>
               <div class="error" id="passwordErr"></div>
            </div>
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="text" class="form-control" id="email" name="email" value="{{przodownik.uzytkownik.getEmail}}">
                <div class="error" id="emailErr"></div>
            </div>
        </fieldset>

        <br/>
        {% if update == 1 %}
            <button type="submit" class="btn btn-info">Zmień</button>
        {% else %}
            <button type="submit" class="btn btn-info"><i class="fas fa-plus"> Dodaj</i></button>
        {% endif %}
    </form>

{% endblock %}
