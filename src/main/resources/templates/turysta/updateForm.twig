{% extends '../formTemplate.twig' %}

{% block title %}
    Formularz Turysty
{% endblock %}

{% block header %}
    <h2>Formularz Turysty </h2>
{% endblock %}

{% block form %}

    <form id="signupFormUpdate" name="signupFormUpdate" action="/turysci/update/{{ turysta.getIdTurysta }}" method="POST">
        <fieldset>
            <legend> Dane Turysty </legend>
            <div class="form-group">
                <label for="imie">Imie</label>
                <input type="text" class="form-control" id="imie" name="imie" value="{{ turysta.getImie}}">
                <div class="error" id="nameErr"></div>
            </div>
            <div class="form-group">
                <label for="nazwisko">Nazwisko</label>
                <input type="text" class="form-control" id="nazwisko" name="nazwisko" value="{{ turysta.getNazwisko }}">
                <div class="error" id="surnameErr"></div>
            </div>
            <div class="form-group">
                <label for="telefon">Telefon</label>
                <input type="text" class="form-control" id="telefon" name="telefon" value="{{ turysta.getTelefon }}">
               <div class="error" id="phoneErr"></div>
            </div>
             <div class="form-group">
                <label for="opis">Opis</label>
                 <textarea class="form-control" id="opis" name="opis">{{ turysta.getOpis }}</textarea>
                 <div class="error" id="descErr"></div>
            </div>
              <div class="form-group">
                <label for="punkty">Punkty</label>
                <input type="number" class="form-control" id="punkty" name="punkty" value="{{ turysta.getPunkty }}">
                <div class="error" id="pointsErr"></div>
            </div>
        </fieldset>
        
        <fieldset>
            <legend> Dane Konta </legend>
            <div class="form-group">
                <label for="login">Login</label>
                <input type="text" class="form-control" id="login" name="login" value="{{ uzytkownik.getLogin }}">
                <div class="error" id="loginErr"></div>
            </div>
            <div class="form-group">
                <label for="haslo">Hasło</label>
                 <div class="input-container">
                   <input type="password" class="form-control input-field" id="haslo" name="haslo" value="">
                   <i class="fas fa-eye icon" id="eye"></i>
               </div>
               <div class="error" id="passwordErr"></div>
            </div>
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="text" class="form-control" id="email" name="email" value = "{{ uzytkownik.getEmail }}">
                <div class="error" id="emailErr"></div>
            </div>
        </fieldset>
        <br/>
        <button type="submit" class="btn btn-info">Zmień</button>
    </form>

{% endblock %}