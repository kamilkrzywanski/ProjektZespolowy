{% extends '../baseTemplate.twig' %}

{% block title %}Dokumentacja{% endblock %}
{% block header %}
    Dokumentacja
{% endblock %}
{% block main %}
    {{ siema }}
    <div class="col-12">
        <h1>{{ turysta.getImie }} {{ turysta.getNazwisko }}</h1>
        <span>Data Rozpoczecia Wycieczki:  {{ wycieczka.getDataOd }} </span>
        <br>
        <span>Data Zako≈Ñczenia Wycieczki:  {{ wycieczka.getDataDo }} </span>
        <br>
        <span>Opis:  {{ wycieczka.getOpis }} </span>
        <br>
        <span>Punkty:  {{ wycieczka.getSumaPunktow }}  </span>
        <br>
        <span>Punkty GOT: {{ wycieczka.getSumaPunktowDoGot }}  </span>

    </div>
    <br><br>
    <div class="col-12">
        <table id="myTable" class="table table-striped align-middle table-sm">
            <thead class="thead-dark">
            <tr>
                <th scope="col" width="20px">#</th>
                <th scope="col">Opis Trasy</th>
                <th scope="col">Pasmo</th>
                <th scope="col">Data</th>
                <th scope="col">Suma pkt / do GOT</th>
                {% if 'ROLE_przodownik' in LoggedUser.getAuthorities and trasa.getSprawdzona == 0 %}
                    <th scope="col">Sprawdzona</th>
                {% endif %}
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for trasa in trasy %}
                <tr>
                    <td>{{ trasa.getIdTrasa }}</td>
                    <td>{{ trasa.getOpis }}</td>
                    <td>{{ trasa.getPasmo.getGrupa.getNazwa }}</td>
                    <td>{{ trasa.getData }}</td>
                    {% if trasa.getDubel == 0 %}
                        <td>{{ trasa.getSuma_punktow }} / {{ trasa.getSumaPunktowDoGot }}</td>
                    {% else %}
                        <td>{{ trasa.getSuma_punktow }} / {{ trasa.getSumaPunktowDoGot }} <abbr
                                    title="Twoja trasa zawiera zdublowane odcinki, kt√≥re nie bƒôdƒÖ brane pod uwagƒô do punktacji GOT">
                                ‚ùó</abbr>
                        </td>
                    {% endif %}
                    {% for grupaPrzodownika in grupyPrzodownika %}
                        {% if 'ROLE_przodownik' in LoggedUser.getAuthorities and trasa.getSprawdzona == 0 %}
                            <td class="btn disabled">üî≤</td>
                        {% endif %}
                        {% if 'ROLE_przodownik' in LoggedUser.getAuthorities and trasa.getSprawdzona == 1 %}
                            <td class="btn disabled">‚úÖ</td>
                        {% endif %}
                        <td class="text-right">
                            {% if 'ROLE_przodownik' in LoggedUser.getAuthorities and trasa.getPasmo.getGrupa.getNazwa in grupaPrzodownika.getGrupa.getNazwa %}
                                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                                    <abbr title="Szczeg√≥≈Çy trasy"><a class="btn btn-sm bg-transparent"
                                                                     href="/trasa/szczegoly/{{ trasa.getIdTrasa }}">üë£</a></abbr>
                                </div>
                            {% elseif 'ROLE_przodownik' in LoggedUser.getAuthorities and trasa.getPasmo.getGrupa.getNazwa != grupaPrzodownika.getGrupa.getNazwa %}
                                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                                    <abbr title="Szczeg√≥≈Çy trasy"><a class="btn disabled btn-sm bg-transparent"
                                                                     href="/trasa/szczegoly/{{ trasa.getIdTrasa }}">üë£</a></abbr>
                                </div>
                            {% endif %}
                        </td>
                    {% endfor %}
                    {% if 'ROLE_turysta' in LoggedUser.getAuthorities %}
                        <td class="text-right">
                            <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                                <abbr title="Szczeg√≥≈Çy trasy"><a class="btn btn-sm bg-transparent"
                                                                 href="/trasa/szczegoly/{{ trasa.getIdTrasa }}">üë£</a></abbr>
                            </div>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
    <div class="col-12">
        <h1>Zdjƒôcia Tras</h1>
        <form id="zdjeciaDoUsuniecia" action="/zdjecie/usunZaznaczone" method="GET">
            {% for zdjecie in zdjecia %}
                {% if zdjecie is null %}
                    <h1>Brak zdjƒôc</h1>
                {% else %}
                    <a class="demo" href="{{ zdjecie.getSciezka }}" data-lightbox="gallery"
                       data-title="{{ zdjecie.getOpis }}">
                        <img class="example-image" src="{{ zdjecie.getSciezka }}" alt="zdjecie" witdh="150px"
                             height="150px"/>
                    </a>
                    {% if 'ROLE_turysta' in LoggedUser.getAuthorities %}
                        <input type="checkbox" name="imageIds" value="{{ zdjecie.getIdZdjecieWycieczka }}"/>
                    {% endif %}
                    <input type="submit" id="submit-form" class="hidden"/>
                {% endif %}
            {% endfor %}

        </form>
    </div>
    <br><br>
    {% if 'ROLE_turysta' in LoggedUser.getAuthorities %}
        <button class="btn btn-info" id="toggleButton" role="button">Dodaj zdjƒôcia</button>
        <a href="/zdjecie/usunWszystkie/{{ idWycieczka }}" class="btn btn-info" role="button">Usu≈Ñ wszystkie zdjƒôcia</a>
        <a href="/zdjecie/usunZaznaczone" class="btn btn-info" role="button"><label for="submit-form"
                                                                                    id="Labelzaznaczone" tabindex="0">Usu≈Ñ
                wybrane zdjƒôcia</label></a>
        <button class="btn btn-info" id="odswiez" role="button">Od≈õwie≈º</button>
        <br><br>
        <form id="zdjeciaForm" action="/zdjecie/dodaj/{{ idWycieczka }}" method="POST" enctype="multipart/form-data">
            <fieldset>
                <div class="form-group">
                    <label for="files">Zdjƒôcie</label>
                    <input type="file" class="form-control" id="files" name="files" multiple="multiple"
                           accept="image/*">
                </div>

                <div class="form-group">
                    <label for="opis">Opis</label>
                    <br>
                    <textarea id="opis" name="opis" rows="4" cols="50"></textarea>
                </div>
            </fieldset>
            <button type="submit" class="btn btn-info"><i class="fas fa-plus">Dodaj</i></button>
        </form>
    {% endif %}
    {% if 'ROLE_przodownik' in LoggedUser.getAuthorities and trasa.getSprawdzona == 1 %}
        <button class="btn btn-info" role="button" data-toggle="modal" data-target="#accepTourModal">
            Akceptuj wycieczke
        </button>
        <button class="btn btn-danger" role="button" data-toggle="modal" data-target="#rejectTourModal">
            Odrzuƒá wycieczke
        </button>
        {% include 'acceptTourModal.twig' %}
        {% include 'rejectTourModal.twig' %}
    {% endif %}
{% endblock %}
