{% extends '../formTemplate.twig' %}

{% block css %}

{% endblock %}

{% block title %}
    Formularz Logowania
{% endblock %}

{% block header %}
      <div class="row justify-content-center">
        <h2>Zaloguj</h2>
      </div>
{% endblock %}

{% block main %}
    <div class="row justify-content-around">
        <div class="col-12 col-md-4 mt-3" id="form">
            {% block form %}
        
       <form action="/login" method="post" class="form-example">

           {% if app.request.parameter.get("error") == 'true' %}
               <div class="flash-msg alert alert-danger" role="alert" style='display:none;'>
                   Błędny login lub hasło
               </div>

           {% endif %}




           <div class="form-group">
               <label for="username">Login</label>
               <input type="text" class="form-control" id="username" name="username" required>
           </div>
           <div class="form-group">
               <label for="haslo">Hasło</label>
               <input type="password" class="form-control" id="password" name="password" required>
           </div>



            <input type="submit" class="btn btn-info" value="Zaloguj">

        </form>
            

            {% endblock %}
        </div>
    </div>

    {% block js %}

    {% endblock %}

{% endblock %}